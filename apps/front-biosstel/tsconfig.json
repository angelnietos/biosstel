{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@biosstel/shared-types": [
        "../../libs/shared-types/src/index.ts"
      ],
      "@biosstel/shared": [
        "../../libs/frontend/shared/src/index.ts"
      ],
      "@biosstel/shell": [
        "../../libs/frontend/shell/src/index.ts"
      ],
      "@biosstel/ui": [
        "../../libs/frontend/ui/src/index.ts"
      ],
      "@biosstel/ui-layout": [
        "../../libs/frontend/ui-layout/src/index.ts"
      ],
      "@biosstel/platform": [
        "../../libs/frontend/platform/src/index.ts"
      ],
      "@biosstel/auth": [
        "../../libs/frontend/features/auth/src/index.ts"
      ],
      "@biosstel/usuarios": [
        "../../libs/frontend/features/usuarios/src/index.ts"
      ],
      "@biosstel/objetivos": [
        "../../libs/frontend/features/objetivos/src/index.ts"
      ],
      "@biosstel/fichajes": [
        "../../libs/frontend/features/fichajes/src/index.ts"
      ],
      "@biosstel/alertas": [
        "../../libs/frontend/features/alertas/src/index.ts"
      ],
      "@biosstel/operaciones": [
        "../../libs/frontend/features/operaciones/src/index.ts"
      ],
      "@biosstel/empresa": [
        "../../libs/frontend/features/empresa/src/index.ts"
      ],
      "@biosstel/productos": [
        "../../libs/frontend/features/productos/src/index.ts"
      ],
      "@biosstel/inventory": [
        "../../libs/frontend/features/inventory/src/index.ts"
      ],
      "@biosstel/reports": [
        "../../libs/frontend/features/reports/src/index.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
