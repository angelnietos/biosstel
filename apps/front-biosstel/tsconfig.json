{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@biosstel/shared-types": ["../../libs/shared/shared-types/src/index.ts"],
      "@biosstel/shared": ["../../libs/frontend/shared/src/index.ts"],
      "@biosstel/ui": ["../../libs/frontend/ui/src/index.ts"],
      "@biosstel/ui-layout": ["../../libs/frontend/ui-layout/src/index.ts"],
      "@biosstel/platform": ["../../libs/frontend/platform/src/index.ts"],
      "@biosstel/auth": ["../../libs/frontend/auth/src/index.ts"],
      "@biosstel/users": ["../../libs/frontend/users/src/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
