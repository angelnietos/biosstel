{
  "name": "api-biosstel",
  "version": "1.0.0",
  "description": "API with microservices architecture using GraphQL + Express + PostgreSQL/Sequelize",
  "main": "build/app.js",
  "scripts": {
    "dev": "concurrently --raw \"npm run dev:graphql\" \"npm run dev:auth\"",
    "dev:graphql": "ts-node-dev ./app.ts",
    "dev:auth": "ts-node-dev ./microservices/auth/app.ts",
    "build": "tsc && npm run build:common && npm run copy:typedef",
    "build:common": "cd ./microservices/common && npm run build",
    "copy:typedef": "copyfiles -u 1 src/subgraphs/**/*.graphql build/src",
    "start": "node build/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^5.3.0",
    "@apollo/subgraph": "^2.9.3",
    "@apollo/utils.keyvaluecache": "^4.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@graphql-tools/schema": "^10.0.23",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "graphql-tools": "^9.0.11",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "concurrently": "^9.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
