{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["../../dist/libs/*"],
      "@lib/backend/*": ["../../dist/libs/backend/*"],
      "@biosstel/shared-types": ["../../libs/shared-types/src/index.ts"],
      "@biosstel/api-users": ["../../libs/backend/api-users/src/index.ts"],
      "@biosstel/api-shared": ["../../libs/backend/api-shared/src/index.ts"],
      "@biosstel/api-dashboard": ["../../libs/backend/api-dashboard/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
