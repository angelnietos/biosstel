{
  "name": "api-shared",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/backend/api-shared/src",
  "projectType": "library",
  "tags": ["type:shared", "scope:api-shared"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/backend/api-shared/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/backend/api-shared",
        "main": "libs/backend/api-shared/src/index.ts",
        "tsConfig": "libs/backend/api-shared/tsconfig.json",
        "assets": ["libs/backend/api-shared/*.md"]
      }
    }
  }
}
