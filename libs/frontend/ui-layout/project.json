{
  "name": "ui-layout",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/frontend/ui-layout/src",
  "projectType": "library",
  "tags": ["type:layout", "scope:layout"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/frontend/ui-layout",
        "main": "libs/frontend/ui-layout/src/index.ts",
        "tsConfig": "libs/frontend/ui-layout/tsconfig.json",
        "assets": []
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "config": "libs/frontend/ui-layout/vitest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
