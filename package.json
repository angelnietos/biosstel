{
  "name": "biosstel-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start": "node node_modules/nx/bin/nx.js run-many -t dev --parallel",
    "start:front": "node node_modules/nx/bin/nx.js dev front-biosstel",
    "start:api": "node node_modules/nx/bin/nx.js dev api-biosstel",
    "dev": "node node_modules/nx/bin/nx.js run-many -t dev --parallel",
    "dev:front": "node node_modules/nx/bin/nx.js dev front-biosstel",
    "dev:api": "node node_modules/nx/bin/nx.js dev api-biosstel",
    "build": "node node_modules/nx/bin/nx.js run-many -t build",
    "build:front": "node node_modules/nx/bin/nx.js build front-biosstel",
    "build:api": "node node_modules/nx/bin/nx.js build api-biosstel",
    "lint": "node node_modules/nx/bin/nx.js run-many -t lint",
    "test": "node node_modules/nx/bin/nx.js run-many -t test",
    "nx": "node node_modules/nx/bin/nx.js",
    "db:start": "docker-compose -f docker-compose.dev.yml up -d postgres adminer",
    "db:stop": "docker-compose -f docker-compose.dev.yml down",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d postgres adminer",
    "db:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@nx/js": "^20.4.0",
    "@nx/next": "^20.4.0",
    "@nx/node": "^20.4.0",
    "@nx/workspace": "^20.4.0",
    "nx": "^20.4.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
