{
  "name": "biosstel-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml up --build",
    "dev": "pnpm start",
    "start:fresh": "node scripts/ensure-docker.js && pnpm db:reset && docker compose -f docker-compose.dev.yml up --build",
    "kill-ports": "node scripts/kill-ports.js",
    "start:local": "node scripts/kill-ports.js && pnpm db:start && node scripts/wait-for-db.js && node scripts/run-dev-local.js",
    "dev:local": "pnpm start:local",
    "find-ports": "node scripts/find-free-ports.js",
    "dev:dynamic": "node scripts/kill-ports.js && pnpm db:start && node scripts/wait-for-db.js && node scripts/run-dev-dynamic-ports.js",
    "clean:restart": "node scripts/clean-and-restart.js",
    "clean:restart:volumes": "node scripts/clean-and-restart.js --volumes",
    "clean:restart:only": "node scripts/clean-and-restart.js --no-start",
    "dev:api": "node scripts/kill-ports.js --api && node scripts/run-nx.js dev api-biosstel",
    "dev:front": "node scripts/kill-ports.js --front && node scripts/run-nx.js dev front-biosstel",
    "start:api": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml up -d postgres api",
    "dev:backend": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml up -d postgres adminer api && echo \"\" && echo \"âœ… DB + API en Docker. En otra terminal: pnpm dev:front\"",
    "build": "pnpm exec nx run api-biosstel:build && pnpm exec nx run front-biosstel:build",
    "build:api": "pnpm exec nx run api-biosstel:build",
    "build:front": "pnpm exec nx run front-biosstel:build",
    "build:types": "pnpm exec nx build @biosstel/shared-types",
    "build:all": "pnpm exec nx run-many -t build --all",
    "verify": "pnpm build:all",
    "clean": "node scripts/clean.js",
    "fresh-start": "node scripts/clean.js && pnpm install && pnpm start",
    "pnpm:fix-install": "node scripts/clean.js && pnpm install",
    "ci": "pnpm install --frozen-lockfile",
    "db:start": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml up -d postgres adminer",
    "db:stop": "docker compose -f docker-compose.dev.yml down",
    "db:reset": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d postgres adminer",
    "db:seed": "node scripts/db-seed.js",
    "db:reset:seed": "pnpm db:reset && pnpm db:seed",
    "api:seed": "node scripts/api-seed.js",
    "api:docker:graphql": "node scripts/run-api-docker-graphql.js",
    "api:docker:rest": "node scripts/run-api-docker-rest.js",
    "api:test:curl": "node scripts/curl-test-api-modes.js",
    "api:test:curl:graphql": "node scripts/curl-test-api-modes.js graphql",
    "api:test:curl:rest": "node scripts/curl-test-api-modes.js rest",
    "db:logs": "docker compose -f docker-compose.dev.yml logs -f postgres",
    "docker:dev:build": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "pnpm db:stop",
    "docker:dev:full": "docker compose -f docker-compose.dev.yml --profile monitoring up",
    "restart": "docker compose -f docker-compose.dev.yml restart",
    "restart:api": "docker compose -f docker-compose.dev.yml restart api",
    "restart:front": "docker compose -f docker-compose.dev.yml restart frontend",
    "logs": "docker compose -f docker-compose.dev.yml logs -f",
    "logs:api": "docker compose -f docker-compose.dev.yml logs -f api",
    "logs:front": "docker compose -f docker-compose.dev.yml logs -f frontend",
    "cache:clear": "docker compose -f docker-compose.dev.yml exec frontend sh -c 'rm -rf /app/apps/front-biosstel/.next/cache' && docker compose -f docker-compose.dev.yml restart frontend",
    "cache:clear:api": "docker compose -f docker-compose.dev.yml exec api sh -c 'rm -rf /app/apps/api-biosstel/dist'",
    "docker:prod": "docker compose up --build -d",
    "docker:prod:down": "docker compose down",
    "docker:prod:logs": "docker compose logs -f",
    "monitoring:up": "node scripts/ensure-docker.js && docker compose -f docker-compose.dev.yml --profile monitoring up -d",
    "monitoring:down": "docker compose -f docker-compose.dev.yml --profile monitoring down",
    "lint": "pnpm exec nx run api-biosstel:lint && pnpm exec nx run front-biosstel:lint",
    "lint:fix": "pnpm exec nx run-many -t lint -- --fix",
    "lint:api": "pnpm exec nx run api-biosstel:lint",
    "lint:front": "pnpm exec nx run front-biosstel:lint",
    "lint:all": "pnpm exec nx run-many -t lint",
    "typecheck": "pnpm exec nx run api-biosstel:typecheck && pnpm exec nx run front-biosstel:typecheck",
    "typecheck:api": "pnpm exec nx run api-biosstel:typecheck",
    "typecheck:front": "pnpm exec nx run front-biosstel:typecheck",
    "typecheck:all": "pnpm exec nx run-many -t typecheck",
    "check": "pnpm build && pnpm lint && pnpm typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:vitest:ui": "vitest --ui",
    "test:api": "vitest run apps/api-biosstel",
    "test:front": "vitest run apps/front-biosstel",
    "test:all": "pnpm exec nx run-many -t test --all",
    "test:libs": "pnpm exec nx run-many -t test -p ui,ui-layout,platform,shared,auth,users,fichajes,operaciones,empresa,alertas,objetivos,productos,inventory,reports",
    "test:auth": "pnpm exec nx run auth:test",
    "test:fichajes": "pnpm exec nx run fichajes:test",
    "test:objetivos": "pnpm exec nx run objetivos:test",
    "test:alertas": "pnpm exec nx run alertas:test",
    "test:empresa": "pnpm exec nx run empresa:test",
    "test:usuarios": "pnpm exec nx run users:test",
    "test:operaciones": "pnpm exec nx run operaciones:test",
    "test:productos": "pnpm exec nx run productos:test",
    "test:inventory": "pnpm exec nx run inventory:test",
    "test:reports": "pnpm exec nx run reports:test",
    "test:ui": "pnpm exec nx run ui:test",
    "test:ui-layout": "pnpm exec nx run ui-layout:test",
    "test:platform": "pnpm exec nx run platform:test",
    "test:shared": "pnpm exec nx run @biosstel/shared:test",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config=playwright.config.ts",
    "test:e2e:api": "playwright test --config=playwright.config.ts --project=e2e-api",
    "test:e2e:front": "playwright test --config=playwright.config.ts --project=e2e-front",
    "test:e2e:all": "playwright test --config=playwright.config.ts",
    "test:e2e:list": "playwright test --config=playwright.config.ts --list",
    "playwright:install": "playwright install --with-deps chromium",
    "api:smoke": "node scripts/api-smoke-test.js",
    "api:postman-test": "node scripts/api-postman-test.js",
    "storybook": "pnpm exec storybook dev -p 6006",
    "storybook:fresh": "pnpm exec storybook dev -p 6006 --no-manager-cache",
    "build-storybook": "pnpm exec storybook build",
    "storybook:static": "pnpm build-storybook && node scripts/storybook-static-serve.js",
    "storybook:serve": "npx serve storybook-static -p 6006",
    "nx": "pnpm exec nx",
    "nx:gen:list": "pnpm exec nx list",
    "nx:gen": "pnpm exec nx g --no-interactive",
    "graph": "pnpm exec nx graph",
    "sonar:scan": "node scripts/sonar-scan.js",
    "snyk:scan": "node scripts/snyk-scan.js scan",
    "snyk:test": "node scripts/snyk-scan.js test",
    "snyk:code": "node scripts/snyk-scan.js code",
    "snyk:monitor": "node scripts/snyk-scan.js monitor"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.13",
    "@nestjs/cqrs": "^11.0.0",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.13",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.13",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/graphql": "^13.2.0",
    "@nestjs/apollo": "^13.2.0",
    "@apollo/server": "^5.0.0",
    "graphql": "^16.11.0",
    "@reduxjs/toolkit": "^2.11.2",
    "@sentry/nextjs": "^9.47.1",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.3.1",
    "formik": "^2.4.9",
    "motion": "^11.15.0",
    "nestjs-pino": "^4.5.0",
    "next": "^16.1.6",
    "next-intl": "^4.8.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.18.0",
    "pino-http": "^11.0.0",
    "prom-client": "^15.1.3",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.2",
    "react-dom": "^19.2.4",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28",
    "uuid": "^13.0.0",
    "yup": "^1.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.13",
    "@nx/eslint": "^22.5.1",
    "@nx/eslint-plugin": "^22.5.1",
    "@nx/js": "^22.5.1",
    "@nx/next": "^22.5.1",
    "@nx/node": "^22.5.1",
    "@nx/vite": "^22.5.1",
    "@nx/workspace": "^22.5.1",
    "@playwright/test": "^1.58.2",
    "@sonar/scan": "^4.3.4",
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/react": "^8.6.15",
    "@storybook/react-vite": "^8.6.15",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv-cli": "^7.4.2",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.6.1",
    "jest": "^30.2.0",
    "kill-port": "^1.6.1",
    "nodemon": "^3.1.11",
    "nx": "^22.5.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "snyk": "^1.1302.1",
    "source-map-support": "^0.5.21",
    "storybook": "8.6.15",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "auto-install-peers": true,
    "strict-peer-dependencies": false,
    "shamefully-hoist": true,
    "hoist": true,
    "hoist-pattern": ["*"],
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@swc/core",
      "bcrypt",
      "nx",
      "sharp",
      "@scarf/scarf",
      "esbuild",
      "unrs-resolver"
    ],
    "overrides": {
      "@swc/helpers": ">=0.5.17",
      "storybook": "8.6.15",
      "@storybook/addon-essentials": "8.6.15",
      "@storybook/react": "8.6.15",
      "@storybook/react-vite": "8.6.15",
      "@storybook/core": "8.6.15",
      "@storybook/builder-vite": "8.6.15"
    },
    "patchedDependencies": {
      "@nx/eslint@22.5.1": "patches/@nx__eslint@22.5.1.patch"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
