{
  "name": "biosstel-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "scripts": {
    "start": "node node_modules/nx/bin/nx.js run-many -t dev --parallel",
    "start:all": "node node_modules/nx/bin/nx.js run-many -t dev --parallel",
    "start:front": "node node_modules/nx/bin/nx.js dev front-biosstel",
    "start:api": "node node_modules/nx/bin/nx.js dev api-biosstel",
    "dev": "node node_modules/nx/bin/nx.js run-many -t dev --parallel",
    "dev:all": "node node_modules/nx/bin/nx.js run-many -t dev --parallel",
    "dev:front": "node node_modules/nx/bin/nx.js dev front-biosstel",
    "dev:api": "node node_modules/nx/bin/nx.js dev api-biosstel",
    "build": "cd apps/api-biosstel && pnpm nest build && cd ../.. && node node_modules/nx/bin/nx.js build shared-types && cd apps/front-biosstel && pnpm next build",
    "build:front": "cd apps/front-biosstel && pnpm next build",
    "build:api": "node node_modules/nx/bin/nx.js build api-biosstel",
    "lint": "node node_modules/nx/bin/nx.js run-many -t lint",
    "test": "vitest run",
    "nx": "node node_modules/nx/bin/nx.js",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker compose up --build -d",
    "docker:prod:down": "docker compose down",
    "docker:prod:logs": "docker compose logs -f",
    "db:start": "docker compose -f docker-compose.dev.yml up -d postgres adminer",
    "db:stop": "docker compose -f docker-compose.dev.yml down",
    "db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d postgres adminer",
    "db:logs": "docker compose -f docker-compose.dev.yml logs -f postgres",
    "db:seed": "cd apps/api-biosstel && ts-node --project tsconfig.dev.json seed.ts",
    "ci": "pnpm install --frozen-lockfile",
    "lint:front": "node node_modules/nx/bin/nx.js lint front-biosstel",
    "lint:api": "node node_modules/nx/bin/nx.js lint api-biosstel",
    "lint:all": "node node_modules/nx/bin/nx.js run-many -t lint",
    "typecheck": "node node_modules/nx/bin/nx.js run-many -t typecheck",
    "typecheck:front": "node node_modules/nx/bin/nx.js typecheck front-biosstel",
    "typecheck:api": "node node_modules/nx/bin/nx.js typecheck api-biosstel",
    "test:ui": "vitest --ui",
    "test:api": "vitest run apps/api-biosstel",
    "test:front": "vitest run apps/front-biosstel",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:api": "playwright test apps/e2e-api",
    "test:e2e:front": "playwright test apps/e2e-front",
    "test:e2e:all": "playwright test apps/e2e-api apps/e2e-front",
    "playwright:install": "playwright install --with-deps chromium"
  },
  "devDependencies": {
    "@nx/eslint": "^20.4.0",
    "@nx/js": "^20.4.0",
    "@nx/next": "^20.4.0",
    "@nx/node": "^20.4.0",
    "@nx/workspace": "^20.4.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.19.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "happy-dom": "^16.8.1",
    "nodemon": "^3.1.11",
    "nx": "^20.4.0",
    "playwright": "^1.58.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@swc/core",
      "bcrypt",
      "nx",
      "sharp"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  }
}
